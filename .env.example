# Database Configuration
# MongoDB Atlas Connection String (not used anymore)
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority
# MONGODB_URL=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/?appName=Cluster0

# Postgres Connection (Supabase)
# Format: postgresql://username:password@host:5432/postgres?sslmode=require
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database>?sslmode=require
# ! use the npm run db:push:insecure for dev and npm run db:push for prod since for prod we would have TLS certs 
# API_KEY=<supabase_anon_or_service_key>

# Server Configuration
PORT=3000
NODE_ENV=development

# NODE_TLS_REJECT_UNAUTHORIZED="0"
# PGSSLMODE="no-verify"
# CORS Configuration
# Frontend URL for CORS (Vite default port is 5173)
CLIENT_URL=http://localhost:5173

# API Configuration
API_BASE_URL=http://localhost:3000

# JWT/Auth Configuration (if you plan to add authentication)
JWT_SECRET=change_me_in_production

# Email Configuration (for contact forms, notifications)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=<your_brevo_login_or_email>
SMTP_PASS=<your_brevo_app_password>
RECEIVER_EMAIL=<receiver@example.com>

# Notification recipients (comma separated)
CONTACT_NOTIFY_TO=<contact@yourdomain.com>
PICKUP_NOTIFY_TO=
CAREER_NOTIFY_TO=

# File Upload Configuration (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Application Configuration
APP_NAME=Kabadi
APP_VERSION=1.0.0
